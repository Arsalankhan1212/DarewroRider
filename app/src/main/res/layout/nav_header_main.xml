<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height_large"
    android:background="@drawable/gradient_drawable"
    android:orientation="vertical"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.darewro.riderApp.view.customViews.RoundedEdgesImageView
        android:id="@+id/profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_ic_account_circle"/>

   <!-- <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/darewro_logo"
        android:scaleType="centerInside"
        android:layout_centerInParent="true"
        android:padding="10dp"/>-->


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:textColor="@color/clickable_text_white"
        android:textSize="20dp"
        android:includeFontPadding="false"
        android:letterSpacing="-0.07"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="" />

    <TextView
        android:id="@+id/rider_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:textColor="@color/clickable_text_white"
        android:textSize="17dp"
        android:includeFontPadding="false"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="" />



    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
