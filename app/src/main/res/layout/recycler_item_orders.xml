<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="5dp"
    app:cardElevation="5dp"
    android:foreground="@drawable/selectable_drawable_ripple"
    android:stateListAnimator="@animator/lift_on_touch"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/refId"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:text="@string/reference_id"
                android:textColor="@color/dark_grey"
                android:textSize="14dp"

                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    android:id="@+id/orderType"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:text="@string/reference_id"
                    android:textColor="@color/dark_grey"
                    android:textSize="14dp"
                    android:tint="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >

            <TextView
                android:id="@+id/is_corporate"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/perm_group_personal_info"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/two_way"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/perm_group_shortrange_network"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/isFrequent"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_sort_by_size"
                android:backgroundTint="@android:color/holo_green_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/isDuplicate"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_copy_holo_light"
                android:backgroundTint="@android:color/holo_red_dark"
                android:visibility="gone"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/isOnlinePayment"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stat_sys_r_signal_0_cdma"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/isReserved"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_today"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/more_than_3000"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic__3000"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/is_edited"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_query"
                android:visibility="gone"
                android:backgroundTint="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/is_fragile"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_people_carry"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/multi_picked"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/arrow_up"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/multi_delivered"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/arrow_down"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/is_surprise"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_surprise"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:visibility="gone"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/created_by_lbl"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:text="@string/created_by"
                android:textColor="@color/dark_grey"
                android:textSize="14dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/created_by"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.07"
                    android:text=""
                    android:textColor="@color/dark_grey"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/estimated_delivery_fee_title"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:text="@string/estimated_delivery_fee"
                android:textColor="@color/dark_grey"
                android:textSize="14dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/estimated_delivery_fee"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:includeFontPadding="false"
                    android:letterSpacing="-0.07"
                    android:text="@string/estimated_delivery_fee"
                    android:textColor="@color/dark_grey"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/dark_grey"-->
        <!--/>-->


        <LinearLayout
            android:id="@+id/add_ons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/add_ons_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:marqueeRepeatLimit="3"
                android:singleLine="true"
                android:text="@string/addons"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/add_ons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:marqueeRepeatLimit="3"
                android:singleLine="true"
                android:text="@string/no_addons"
                android:textColor="@color/gray"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/dlocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/drop_off_pin"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:letterSpacing="-0.07"
            android:singleLine="true"
            android:text="@string/recipient_contact"
            android:textColor="@color/darker_grey"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:text="@string/recipient_contact"
                android:textColor="@color/dark_grey"
                android:textSize="12dp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/dark_grey" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:text="@string/recipient_contact"
                android:textColor="@color/dark_grey"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:includeFontPadding="false"
                android:letterSpacing="-0.07"
                android:text="@string/recipient_name"
                android:textColor="@color/grey2"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>